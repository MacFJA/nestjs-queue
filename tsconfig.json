{
	"compilerOptions": {
		"target": "es2016",
		"module": "ES2022",
		"moduleResolution": "Bundler",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"inlineSourceMap": true,
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"incremental": true,
		"tsBuildInfoFile": "./.tsbuildinfo",
		"esModuleInterop": false,
		"lib": ["DOM", "ES2022"],
		"stripInternal": true
	},
	"include": ["src/", "test/"],
	"exclude": ["node_modules/", "coverage/"]
}
